<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color_note"
    tools:context=".NoteActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_note"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/activity_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_title_text"
        android:layout_marginTop="2dp"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:inputType="text"
        android:padding="8dp"
        android:maxLength="35" />

    <EditText
        android:id="@+id/activity_note_context"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/edit_note_text"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:gravity="top"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:maxLength="1200" />


</LinearLayout>